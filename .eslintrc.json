{
	"env": {
		"browser": true,
		"es2021": true,
		"jest/globals": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"prettier",
		"plugin:prettier/recommended",
		"plugin:react/jsx-runtime"
	],
	"overrides": [
		{
			"files": ["./**/*.ts", "./**/*.tsx"],
			"parser": "@typescript-eslint/parser",
			"plugins": ["@typescript-eslint"]
		}
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react", "prettier", "jest"],
	"rules": {
		"prettier/prettier": "warn",
		"no-unused-vars": "warn"
	}
}
